# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/interview-prep-pro?retryWrites=true&w=majority

# OpenAI API (for LangChain)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# LangSmith (Optional - for AI chain observability and debugging)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=ls__your-langsmith-api-key-here
LANGCHAIN_PROJECT=interview-prep-pro

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_INTERVIEW_DURATION_MINUTES=45
